<style>
    .chat-container {
        max-width: 600px;
        margin: 20px auto;
    }
    .card {
        margin-bottom: 15px;
    }
    .card-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    .card-header img {
        border-radius: 50%;
        width: 50px;
        height: 50px;
        margin-right: 10px;
    }
    .header-content {
        flex-grow: 1;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .vote-button {
        background: none;
        border: none;
        color: white;
        font-size: 1.2em;
        margin: 0 5px;
    }
    .vote-button.active {
        color: white;
    }
    .card:hover{

        transition: none !important;
        transform: none !important;
    }
</style>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">


<div class="row justify-content-center">

    <div class="col-md-6 text-center text-light" id="login-form">
        <div class="card text-light bg-dark" >
            <div class="card-body">

                <h5 class="card-title">Login</h5>
                <br>
                <form onsubmit="return false;">
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" class="form-control bg-dark text-light" id="username" aria-describedby="usernameHelp">
                        <!--<div id="usernameHelp" class="form-text">We'll never share your email with anyone else.</div>-->
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control bg-dark text-light" id="password">
                    </div>
                    <button type="submit" onclick="enterRoom()" class="btn btn-warning">Enter</button>
                </form>
            </div>
        </div>

    </div>

</div>

<div class="row justify-content-center" id="chat" style="display: none">

    <div class="row justify-content-center">

        <div class="row justify-content-center">
            <div class="col-md-7 overflow-auto" id="chat-container">

            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-7 overflow-auto" id="chat-container" style="max-height: 500px">

            </div>
        </div>

    </div>


    <br>

    <div class="fixed-bottom bg-dark  py-2">
        <div class="container">
            <div class="row justify-content-center mt-2">
                <div class="col-9  align-items-center">
                    <input type="text" class="form-control bg-dark text-light" id="message" placeholder="Type Message">
                </div>
                <div class="col-auto">
                    <button type="button" class="btn btn-warning mb-3" onclick="sendChatText()">Send</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="../socket.io/socket.io.js"></script>
<script src="https://kit.fontawesome.com/a076d05399.js"></script>
<script src="/javascripts/forum.js"></script>