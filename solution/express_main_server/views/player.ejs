<div class="row justify-content-center">
    <div class="col-9">
        <div class="row">
            <div class="col-10">
                <input onkeydown="customEventFunction(event)" id="player-name" class="form-control mr-sm-2 bg-dark text-light" type="search" placeholder="Search for Player name" aria-label="Search">
            </div>
            <div class="col">
                <button  onsubmit="searchPlayers()" onclick="searchPlayers()" class="btn btn-outline-warning my-2 my-sm-0" type="button">Search</button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="container mt-5">
        <table class="table table-hover table-striped table-dark mt-3">
            <thead>
            <tr class="text-center">
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Position</th>
                <th scope="col">Current Club</th>
            </tr>
            </thead>
            <tbody id="playerList" class="text-center">
            </tbody>
        </table>
    </div>
</div>

<script src="/javascripts/players.js"></script>