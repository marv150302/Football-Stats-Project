<div class="row  justify-content-center">
    <div class="col-md-6 text-center">
        <div class="card h-100 bg-secondary text-light">
            <div class="card-body">
                <img id="club-logo" src="" alt="team-logo">
                <br>
                <h4 id="club-name" ></h4>

            </div>
        </div>
    </div>

    <!--Coach name -->
    <div class="col-md-3 text-center ">
        <div class="card h-100 bg-dark text-dark">
            <div class="card-body bg-warning">
                <img class="img-fluid" src="/images/coach.png">
                <h4 class="fw-bold">Coach</h4>
                <h2 id="coach-name"></h2>
            </div>
        </div>
    </div>

    <!--Squad Size -->

    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-header bg-primary text-white text-center">
                Last Match
            </div>
            <div class="card-body">
                <h5 class="card-title text-center">Team Name</h5>
                <hr>
                <div class="d-flex justify-content-between">
                    <p class="mb-0">Opponent:</p>
                    <p class="mb-0">Opponent Team</p>
                </div>
                <div class="d-flex justify-content-between">
                    <p class="mb-0">Date:</p>
                    <p class="mb-0">2024-05-15</p>
                </div>
                <div class="d-flex justify-content-between">
                    <p class="mb-0">Result:</p>
                    <p class="mb-0">Team 1 - Team 2</p>
                </div>
            </div>
            <div class="card-footer text-muted text-center">
                Stadium: Stadium Name
            </div>
        </div>
    </div>


</div>

<!--Standings-->
<div class="row  mt-3">
    <div class="col-md-3">
        <div class="card h-100 bg-dark text-light">
            <div class="card-body">
                <img id="domestic-competition-logo" src="" alt="domestic-competition-logo">
                <br>
                <h4 id="domestic-competition-name" ></h4>

            </div>
        </div>
    </div>
    <div class="col-md-9">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Standings</h5>
                <div class="table-responsive">
                    <table id="standings-table" class="table table-striped table-hover">
                        <thead>
                        <th>Position</th>
                        <th>Team</th>
                        <th>Played</th>
                        <th>Goals</th>
                        <th>W</th>
                        <th>L</th>
                        <th>D</th>
                        <th>Points</th>
                        </thead>
                        <tbody id="standings-table-tbody">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row  mt-3">
    <!--Number of foreign players -->
    <div class="col-md-3">
        <div class="card h-100 bg-danger text-dark text-center">
            <div class="card-body bg-danger">
                <img id="" src="/images/foreign.png" alt="domestic-competition-logo">
                <br>
                <h4 id="" >Foreigners Number</h4>
                <h2 class="fw-bold text-light" id="foreign-player-number" ></h2>
            </div>
        </div>
    </div>

    <!--Average age-->
    <div class="col-md-3">
        <div class="card h-100  bg-secondary text-light text-center">
            <div class="card-body bg-secondary">
                <img id="" src="/images/age-range.png" alt="domestic-competition-logo">
                <br>
                <h4 id="" class="fw-bold">Average Age</h4>
                <h2 class="fw-bold text-light" id="average-age" ></h2>
            </div>
        </div>
    </div>

    <!--Stadium info -->
    <div class="col-md-6">
        <div class="card  bg-warning text-dark text-center">
            <div class="card-body bg-warning">
                <img id="" src="/images/stadium.png" alt="domestic-competition-logo">
                <br>
                <h4 id="" class="fw-bold">Stadium</h4>
                <table class="text-dark table-warning table table-striped">
                    <tbody>
                    <tr>
                        <th scope="row">Stadium Name</th>
                        <td id="stadium-name" ></td>
                    </tr>
                    <tr>
                        <th class="text-dark" scope="row">Stadium Size</th>
                        <td id="stadium-size" ></td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row  mt-3">
    <!--Club's players-->
    <div class="col-md-8">
        <div class="card h-100 bg-success text-dark text-center">
            <div class="card-body bg-success">
                <br>
                <h4 id="player-heading">Players</h4>
                <div class="table-container" style="max-height: 300px; overflow-y: auto;">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Player</th>
                            <th>Name</th>
                            <th>Position</th>
                            <th>Country</th>
                            <th>Age</th>
                        </tr>
                        </thead>
                        <tbody id="player-list"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!--National team players-->
    <div class="col-md-4">
        <div class="card  bg-warning text-dark text-center">
            <div class="card-body bg-warning">
                <img id="" src="/images/united-nations.png" alt="domestic-competition-logo">
                <br>
                <h5 id="" class="fw-bold">NÂ° of National Team Players</h5>
                <h1 class="fw-bold">6</h1>
            </div>
        </div>
    </div>
</div>

