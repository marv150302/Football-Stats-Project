<div class="row justify-content-center">
    <!-- Club Info Card -->
    <div class="col-md-6 text-center">
        <div class="card h-100 bg-warning text-dark">
            <div class="card-body">
                <img id="club-logo" src="" alt="team-logo">
                <br><br>
                <h3 class="fw-bold" id="club-name"></h3>
            </div>
        </div>
    </div>

    <!-- Coach Info Card -->
    <div class="col-md-2 text-center">
        <div class="card h-100 bg-dark text-light">
            <div class="card-body bg-dark">
                <img alt="coach-image" class="img-fluid" src="/images/coach.png">
                <br><br>
                <h3 class="fw-bold">Coach</h3>
                <hr>
                <h2 id="coach-name"></h2>
            </div>
        </div>
    </div>

    <!-- Last Game Info Card -->
    <div class="col-md-4">
        <a id="last-game-link" href="">
            <div class="card bg-dark" id="last-game-link-card">
                <div class="card-header bg-dark text-white text-center">Last Match</div>
                <div class="card-body bg-dark text-light fw-bold">
                    <div class="row justify-content-center">
                        <!-- Home Team Info -->
                        <div class="col-md-4 text-center">
                            <img style="width: 50px; height: 60px" class="img-fluid" alt="home-team-logo" id="home-team-logo" src="">
                            <div id="home-team-name"></div>
                        </div>
                        <!-- Score Info -->
                        <div class="col-md-4 text-center">
                            <br>
                            <h1 id="score"></h1>
                        </div>
                        <!-- Away Team Info -->
                        <div class="col-md-4 text-center">
                            <img style="width: 50px; height: 60px" class="img-fluid" id="away-team-logo" src="">
                            <div id="away-team-name"></div>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-muted text-center bg-dark text-light">
                    <p class="text-light fw-bold" id="last-game-stadium-name"></p>
                </div>
            </div>
        </a>
    </div>
</div>

<!-- Standings Section -->
<div class="row mt-3">
    <!-- Competition Info Card -->
    <div class="col-md-3">
        <a id="competition-link" href="">
            <div class="card h-100 bg-dark text-light text-center">
                <div class="card-body bg-dark">
                    <img id="domestic-competition-logo" src="" alt="domestic-competition-logo">
                    <br>
                    <h4 id="domestic-competition-name"></h4>
                </div>
            </div>
        </a>
    </div>
    <!-- Standings Table Card -->
    <div class="col-md-9">
        <a href="" id="standings-link">
            <div class="card bg-dark">
                <div class="card-body bg-dark text-light">
                    <h5 class="card-title fw-bold">Domestic League Standings</h5>
                    <div class="table-responsive">
                        <table id="standings-table" class="table table-dark table-striped table-hover">
                            <thead>
                            <tr>
                                <th>Position</th>
                                <th>Team</th>
                                <th>Played</th>
                                <th>Goals</th>
                                <th>W</th>
                                <th>L</th>
                                <th>D</th>
                                <th>Points</th>
                            </tr>
                            </thead>
                            <tbody id="standings-table-tbody">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </a>
    </div>
</div>

<!-- Additional Info Section -->
<div class="row mt-3">
    <!-- Number of Foreign Players Card -->
    <div class="col-md-3">
        <div class="card h-100 bg-dark text-dark text-center">
            <div class="card-body bg-dark">
                <img src="/images/foreign.png" alt="foreign players">
                <br><br>
                <h3 class="fw-bold text-light">Foreigners Number</h3>
                <hr>
                <h1 class="fw-bold text-light" id="foreign-player-number"></h1>
            </div>
        </div>
    </div>
    <!-- Average Age Card -->
    <div class="col-md-3">
        <div class="card h-100 bg-dark text-light text-center">
            <div class="card-body bg-dark">
                <img src="/images/age-range.png" alt="average age">
                <br><br>
                <h3 class="fw-bold">Average Age</h3>
                <hr>
                <h1 class="fw-bold text-light" id="average-age"></h1>
            </div>
        </div>
    </div>
    <!-- Stadium Info Card -->
    <div class="col-md-6">
        <div class="card bg-warning text-dark text-center">
            <div class="card-body bg-warning">
                <img src="/images/stadium.png" alt="stadium">
                <br>
                <h4 class="fw-bold">Stadium</h4>
                <table class="table table-dark table-striped text-dark">
                    <tbody>
                    <tr>
                        <th scope="row">Stadium Name</th>
                        <td id="stadium-name"></td>
                    </tr>
                    <tr>
                        <th class="text-light" scope="row">Stadium Size</th>
                        <td class="text-light" id="stadium-size"></td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Players Section -->
<div class="row mt-3">
    <!-- Club's Players Card -->
    <div class="col-md-8">
        <div class="card h-100 bg-success text-dark text-center">
            <div class="card-body bg-success">
                <br>
                <h4 id="player-heading">Players</h4>
                <div class="table-container" style="max-height: 300px; overflow-y: auto;">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Player</th>
                            <th>Name</th>
                            <th>Position</th>
                            <th>Country</th>
                            <th>Age</th>
                        </tr>
                        </thead>
                        <tbody id="player-list"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- National Team Players Card -->
    <div class="col-md-4">
        <div class="card bg-dark text-light text-center">
            <div class="card-body bg-dark">
                <img src="/images/united-nations.png" alt="national team players">
                <br><br>
                <h3 class="fw-bold">NÂ° of National Team Players</h3>
                <hr>
                <h1 id="national-player-number" class="fw-bold"></h1>
            </div>
        </div>
    </div>
</div>

<!-- Forum Section -->
<div class="row mt-3 justify-content-center">
    <div class="col-9">
        <div class="card bg-dark text-light text-center">
            <div class="card-title">
                <br>
                <h5 class="text-light fw-bold">Engage and share insights <br> in real-time discussions with fellow fans.
                </h5>
            </div>
            <div class="card-body bg-dark">
                <img src="/images/chat.png" style="width: 10%" alt="chat image">
                <br><br>
                <a id="forum-button" href="" type="button" class="btn btn-warning w-100">Enter Forum</a>
            </div>
        </div>
    </div>
</div>

